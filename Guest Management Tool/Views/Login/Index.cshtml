<main class="d-flex justify-content-center form-signin">
    <form asp-action="UserLogin" method="post">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
            <input type="text" class="form-control" id="email" style="width:250px"  placeholder="name@example.com">
            <label for="email">Email address</label>
        </div>
        <br />
        <div class="form-floating">
            <input type="password" class="form-control" id="password" style="width:250px" placeholder="Password">
            <label for="password">Password</label>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-primary" type="submit">
            Login
        </button>
    </form>
</main>