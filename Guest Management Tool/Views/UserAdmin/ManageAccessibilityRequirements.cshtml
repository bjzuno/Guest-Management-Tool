@model IEnumerable<AccessibilityRequirement>

<h2>Manage Accessibility Requirements</h2>

<!-- Add Profession Form -->
<form asp-action="AddAccessibilityRequirement" method="post">
    <input type="text" name="name" placeholder="Enter new requirement.." required />
    <button class="btn btn-primary" type="submit">Add Requirement</button>
</form>

<!-- Profession List -->
<table>
    <thead>
        <tr>
            <th>Requirement Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var accessibilityRequirement in Model)
        {
            <tr>
                <td>@accessibilityRequirement.Name</td>
                <td>
                    <form asp-action="RemoveAccessibilityRequirement" method="post">
                        <input type="hidden" name="id" value="@accessibilityRequirement.Id" />
                        <button class="btn btn-primary" type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<br />

<a class="btn btn-primary" asp-controller="UserAdmin" asp-action="DataEntry">
    Back to Menu
</a>
