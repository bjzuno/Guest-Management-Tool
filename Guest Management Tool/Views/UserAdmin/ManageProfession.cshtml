@model IEnumerable<Profession>

<h2>Manage Professions</h2>

<!-- Add Profession Form -->
<form asp-action="AddProfession" method="post">
    <input type="text" name="name" placeholder="Enter new profession" required />
    <button class="btn btn-primary" type="submit">Add Profession</button>
</form>

<!-- Profession List -->
<table>
    <thead>
        <tr>
            <th>Profession Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profession in Model)
        {
            <tr>
                <td>@profession.Name</td>
                <td>
                    <form asp-action="RemoveProfession" method="post">
                        <input type="hidden" name="id" value="@profession.Id" />
                        <button class="btn btn-primary" type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<br />

<a class="btn btn-primary" asp-controller="UserAdmin" asp-action="DataEntry">
    Back to Menu
</a>
